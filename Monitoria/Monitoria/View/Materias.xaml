<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Monitoria.View.Materias" Title="Materias">
    
    <StackLayout>
        <StackLayout BackgroundColor="Blue" HeightRequest="80">
            <Label Text="Matérias"/>
        </StackLayout>
        <ListView x:Name="Mat" ItemsSource="{}" ItemSelected="SelecionaMateria">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell ImageSource="{}" Text="{}" TextColor="Black"/>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>
    </StackLayout>

</ContentPage>